[configuration]
  title = Annual Energy Production

[widget]
  type = chart

  endtime = 2018-01-01 00:00:00
  timespan = 16 year
  timezone = UTC

  format = parseFloat(Math.round(value / 100000) / 10).toFixed(1) + ' TWh'
  dayformat = " "
  hour-format = " "

  label-format = label

  mode = column stack

  ticks-time = 30
  rotate-ticks = 0
  legend-last-value = false
  server-aggregate = true
  vertical-grid = false
  lastvaluelabel = hidden
  centralize-ticks = true
  centralize-columns = true

  entity = energinet.dk

  statistic = sum
  period = 1 year

  [series]
    metric = primary_production
    [tags]
      name = DK-East

    display = false
    alias = primary_east

  [series]
    metric = primary_production
    [tags]
      name = DK-West

    display = false
    alias = primary_west

  [series]
    label = Primary
    value = value('primary_east') + value('primary_west')
    color = dimgray

  [series]
    metric = local_production
    [tags]
      name = DK-East

    display = false
    alias = local_east

  [series]
    metric = local_production
    [tags]
      name = DK-West

    display = false
    alias = local_west

  [series]
    label = Local
    value = value('local_east') + value('local_west')
    color = #009999

  [series]
    metric = wind_power_production
    [tags]
      name = DK-East

    display = false
    alias = wind_east

  [series]
    metric = wind_power_production
    [tags]
      name = DK-West

    display = false
    alias = wind_west

  [series]
    label = Wind
    value = value('wind_east') + value('wind_west')
    color = steelblue

  [series]
    metric = solar_cell_production_(estimated)
    [tags]
      name = DK-East

    display = false
    alias = solar_east

  [series]
    metric = solar_cell_production_(estimated)
    [tags]
      name = DK-West

    display = false
    alias = solar_west

  [series]
    label = Solar
    value = value('solar_east') + value('solar_west')
    color = darkorange