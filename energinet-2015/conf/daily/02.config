[configuration]
  title = Daily Production, Wind, 2015

[widget]
  type = chart

  endtime = 2016-01-01 00:00:00
  starttime = 2015-01-01 00:00:00
  timezone = UTC

  format = parseFloat(Math.round(value / 100) / 10).toFixed(1) + ' GWh'
  dayformat = %b
  rotate-ticks = 0

  label-format = label

  mode = column stack

  legend-last-value = false
  server-aggregate = true
  vertical-grid = false
  lastvaluelabel = hidden

  entity = energinet.dk

  statistic = sum
  period = 1 day

  [series]
    metric = wind_power_production
    [tags]
      name = DK-West

    label = Wind, West
    color = steelblue

  [series]
    metric = wind_power_production
    [tags]
      name = DK-East

    label = Wind, East
    color = lightsteelblue